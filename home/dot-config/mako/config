default-timeout=10000
on-notify=exec pw-play /usr/share/sounds/freedesktop/stereo/message.oga

# --- 外観設定 ---
background-color=#1e1e2eCC
text-color=#cdd6f4ff
border-color=#89b4faFF
border-size=2
border-radius=10
padding=15
width=350
height=150

# --- アイコン ---
icons=1
max-icon-size=48
icon-location=left

# --- 機能設定 ---

# プログレスバーの色
progress-color=over #f5c2e7FF

# --- 操作バインディング ---
# 左クリック: デフォルトのアクションを実行 (ボタンの代わり)
on-button-left=invoke-default-action

# 右クリック: 通知を閉じる
on-button-right=dismiss

# 中クリック (ホイール押し込み): アクション一覧をメニューで表示
# ※ wofi がインストールされている場合の例です
on-button-middle=exec makoctl menu -n "$id" -- wofi -d -p 'Action: '
